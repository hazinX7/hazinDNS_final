@model hazinDNS_v2.Models.User

@{
    ViewData["Title"] = "Профиль";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card profile-card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Профиль пользователя</h2>
                    
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label">Имя пользователя</label>
                        <p class="form-control-static">@Model.Username</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <p class="form-control-static">@Model.Email</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Роль</label>
                        <p class="form-control-static">@Model.Role</p>
                    </div>
                    <div class="mb-4">
                        <label class="form-label">Баланс</label>
                        <p class="form-control-static">@Model.Balance.ToString("C")</p>
                    </div>
                    <div class="d-flex justify-content-between flex-wrap gap-2">
                        <a asp-controller="Account" asp-action="ChangePassword" class="btn btn-primary">
                            <i class="bi bi-key"></i> Сменить пароль
                        </a>
                        <a href="/Balance" class="btn btn-primary">
                            <i class="bi bi-wallet2"></i> Пополнить баланс
                        </a>
                        <a href="/Order/History" class="btn btn-info">
                            <i class="bi bi-clock-history"></i> История заказов
                        </a>
                        <a onclick="logout()" class="btn btn-danger">
                            <i class="bi bi-box-arrow-right"></i> Выйти
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 